<div class="listings">
  <% @listings.each do |listing| %>
    <div class="listing">
        <div class="listing-header">
          <% listing.photos.each do |photo| %>
            <%= image_tag photo, class: "listing-image" %>
          <% end %>
          <div class="listing-left">
              <h2 class="listing-title"><%= listing.title %></h2>
              <p class="listing-description"><%= listing.description %></p>
              <div class="listing-detail">
                <%= link_to ">> Check the details", listing_path(listing) %>
              </div>
          </div>
          <div class="listing-right">
              <div class="listing-price">
                $ <%= listing.fee %>
              </div>
              <div class="listing-person">Provided by<br />
                <% if (User.find_by_id(listing.user_id).photo.attached?) %>
                  <%= User.find_by_id(listing.user_id).photo %><br />
                <% else %>
                  <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar-large" %><br />
                <% end %>
                <%= User.find_by_id(listing.user_id).first_name %> <%= User.find_by_id(listing.user_id).last_name %>
              </div>
          </div>
        </div>
    </div>
  <% end %>
</div>
