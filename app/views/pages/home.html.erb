<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"
/>

<div class="d-flex justify-content-center">

  <div class="background">

    <div class="home">

      <h1> Welcome to the BabySitter's Club </h1>
      <h4> The few, the proud, the babysitters </h4>

      <div class="splash">
        <h2>What are we looking for today?</h2>
        <div class="d-flex justify-content-between">
          <%= link_to listings_path do %>
            <div class="parent btn">
              <h4>I'm a parent</h4>
            </div>
          <% end %>
          <%= link_to bookings_path do %>
            <div class="sitter btn">
              <h4>I am a sitter</h4>
            </div>
          <% end %>
        </div>
      </div>
<%= tag.div class: "swiper", data: {
  controller: "carousel",
  carousel_options_value: {
    pagination: {
      el: ".swiper-pagination"
    },
    navigation: {
      nextEl: ".swiper-button-next",
      prevEl: ".swiper-button-prev"
    },
    effect: "coverflow"
  }
} do %>
  <div class="swiper-wrapper">
    <div class="swiper-slide">Slide 1</div>
    <div class="swiper-slide">Slide 2</div>
    <div class="swiper-slide">Slide 3</div>
  </div>
  <div class="swiper-pagination"></div>
  <div class="swiper-button-prev"></div>
  <div class="swiper-button-next"></div>
  <div class="swiper-scrollbar"></div>
<% end %>

<style type="text/css" media="screen">.swiper-slide { height: 20rem; background-color: pink; display: grid; place-items: center; }</style>
    </div>
  </div>
</div>
